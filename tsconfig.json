{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "target": "ES2018",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": [
    "**/build/**/*"
  ]
}
